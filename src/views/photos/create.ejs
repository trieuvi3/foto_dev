<%- include('../partials/header'); -%>

<form action="/photos/store" method="POST" enctype="multipart/form-data">
  <h2>New Photo</h2>
  <label for="title">Title</label>
  <input type="text" name="title" required />
  <div class="title error"></div>
  <div class="form-group">
    <label for="sharemode">Sharing mode</label>
    <select class="form-control" name="sharemode">
      <option value="1">Public</option>
      <option value="2">Private</option>
    </select>
  <div class="sharemode error"></div>
  <div class="upload-file">
      <input type="file" name="image" />
      <div class="image error"></div>
  </div>
  <label for="description">Description</label>
  <textarea id="w3review" name="description" rows="4" cols="31"></textarea>
  <div class="description error"></div>
  <input type="text" name="userId" value="<%=user._id%>" class="d-none" />
  <button>Save</button>
</form>